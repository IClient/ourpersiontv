<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/x115"
    android:layout_marginLeft="@dimen/x5"
    android:layout_marginTop="@dimen/x5"
    android:background="#243756"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="4">

        <comt.example.administrator.OurPersionTV.CircleImageView
            android:id="@+id/bigrv_image"
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/y10"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center"
            android:src="@mipmap/oldthree" />

        <TextView
            android:id="@+id/bigrv_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="姓名"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/bigrv_item_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:gravity="center"
            android:text="性别"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/bigrv_item_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:gravity="center"
            android:text="年龄"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/bigrv_item_p"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/normal"
            android:gravity="center"
            android:text="位置"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#32456b"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bigrv_item_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="亲睦家五单元二楼401"
                android:textColor="#a6befc"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:text="床位"
                android:textColor="#a6befc" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bigrv_item_wcd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textColor="#a6befc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="照护计划完成度"
                android:textColor="#a6befc" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bigrv_item_bj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="15"
                android:textColor="#a6befc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报警次数"
                android:textColor="#a6befc" />

        </LinearLayout>

    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"></com.github.mikephil.charting.charts.LineChart>

</LinearLayout>
